{
  "name": "MongoIDE",
  "version": "1.0.2",
  "description": "Studio to access & manipulate mongoDB",
  "main": "src/main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.psarkar.com",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/umarbaba/mongoIDE.git"
  },
  "author": "umar/pranoy",
  "license": "ISC",
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "electron-tree-view": "^1.1.0",
    "jquery": "^3.4.1",
    "jquery.json-viewer": "^1.4.0",
    "monaco-editor": "^0.20.0",
    "mongodb": "^3.5.3",
    "path": "^0.12.7",
    "pouchdb-find": "^7.2.1",
    "pouchdb-node": "^7.2.1"
  }
}
